@using Entities.Dtos.Product
@model ProductForUpdateDto
<div class="container">
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="@(Model.Id)" class="control-label"></label>
                    <input asp-for="@(Model.Id)" class="form-control" readonly />
                    <span asp-validation-for="@(Model.Id)" class="text-danger"></span>
                </div>
                
                <div class="form-group">
                    <label asp-for="@(Model.Name)" class="control-label"></label>
                    <input asp-for="@(Model.Name)" class="form-control" />
                    <span asp-validation-for="@(Model.Name)" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="@(Model.ProductCode)" class="control-label"></label>
                    <input asp-for="@(Model.ProductCode)" class="form-control" />
                    <span asp-validation-for="@(Model.ProductCode)" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="@(Model.UnitPrice)" class="control-label"></label>
                    <input asp-for="@(Model.UnitPrice)" class="form-control" />
                    <span asp-validation-for="@(Model.UnitPrice)" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="@(Model.UnitsInStock)" class="control-label"></label>
                    <input asp-for="@(Model.UnitsInStock)" class="form-control" />
                    <span asp-validation-for="@(Model.UnitsInStock)" class="text-danger"></span>
                </div>                

                <div class="form-group">
                    <label asp-for="@(Model.QuantityPerUnit)" class="control-label"></label>
                    <input asp-for="@(Model.QuantityPerUnit)" class="form-control" />
                    <span asp-validation-for="@(Model.QuantityPerUnit)" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="@(Model.OnSale)" class="control-label"></label>
                    <input asp-for="@(Model.OnSale)" class="form-control" />
                    <span asp-validation-for="@(Model.OnSale)" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="@(Model.Active)" class="control-label"></label>
                    <input asp-for="@(Model.Active)" class="form-control" />
                    <span asp-validation-for="@(Model.Active)" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="@(Model.Description)" class="control-label"></label>
                    <input asp-for="@(Model.Description)" class="form-control" />
                    <span asp-validation-for="@(Model.Description)" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="@(Model.BrandId)" class="control-label"></label>
                    <input asp-for="@(Model.BrandId)" class="form-control" />
                    <span asp-validation-for="@(Model.BrandId)" class="text-danger"></span>
                </div>
                
                <div class="form-group">
                    <input class="btn btn-success" type="submit" asp-action="UpdateProduct" value="Güncelle" />
                    <input class="btn btn-warning" type="submit" asp-route-id="@(Model.Id)" asp-action="DeleteProduct" value="Sil" />
                </div>
            </form>
        </div>
    </div>
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}